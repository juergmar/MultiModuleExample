{
  "emails": [
    {
      "identifier": "welcome",
      "subject": "Welcome to Our Service",
      "templateText": "<div style=\"margin-bottom: 20px;\"><h2>Welcome, ${userName}!</h2><p>Thank you for registering with our service. We're excited to have you on board!</p><p>Your account has been created with the email address: <strong>${email}</strong></p></div><div style=\"margin: 25px 0; text-align: center;\"><a href=\"${activationUrl}\" style=\"background-color: #4CAF50; color: white; padding: 10px 20px; text-decoration: none; border-radius: 4px; font-weight: bold;\">Activate Your Account</a></div><p>This activation link will expire in <strong>${expiryHours} hours</strong>.</p><p>If you have any questions, please don't hesitate to contact our support team.</p>",
      "variables": [
        {
          "name": "userName",
          "type": "String",
          "description": "The user's name",
          "required": true
        },
        {
          "name": "email",
          "type": "String",
          "description": "The user's email address",
          "required": true
        },
        {
          "name": "activationUrl",
          "type": "String",
          "description": "URL for account activation",
          "required": true
        },
        {
          "name": "expiryHours",
          "type": "Integer",
          "description": "Number of hours until the activation link expires",
          "required": true
        }
      ]
    },
    {
      "identifier": "passwordReset",
      "subject": "Reset Your Password",
      "templateText": "<div style=\"margin-bottom: 20px;\"><h2>Password Reset Request</h2><p>We received a request to reset your password. If you didn't make this request, you can safely ignore this email.</p></div><div style=\"margin: 25px 0; text-align: center;\"><a href=\"${resetUrl}\" style=\"background-color: #2196F3; color: white; padding: 10px 20px; text-decoration: none; border-radius: 4px; font-weight: bold;\">Reset Your Password</a></div><p>This password reset link will expire in <strong>${expiryMinutes} minutes</strong>.</p><p>If you have any questions, please contact our support team.</p>",
      "variables": [
        {
          "name": "resetUrl",
          "type": "String",
          "description": "URL for password reset",
          "required": true
        },
        {
          "name": "expiryMinutes",
          "type": "Integer",
          "description": "Number of minutes until the reset link expires",
          "required": true
        }
      ]
    },
    {
      "identifier": "orderConfirmation",
      "subject": "Your Order is Confirmed",
      "sectionDefinitions": [
        {
          "name": "orderSummary",
          "description": "Order summary section with items and total",
          "variables": [
            {
              "name": "items",
              "type": "complex",
              "complexType": "List<com.example.app.model.OrderItem>",
              "description": "List of order items",
              "required": true
            },
            {
              "name": "orderTotal",
              "type": "BigDecimal",
              "description": "Total order amount",
              "required": true
            }
          ],
          "content": "<div style=\"background-color: #f9f9f9; padding: 15px; margin-bottom: 20px; border-radius: 4px;\"><h3>Order Summary</h3><table style=\"width: 100%; border-collapse: collapse;\"><thead><tr style=\"border-bottom: 1px solid #ddd;\"><th style=\"text-align: left; padding: 8px;\">Item</th><th style=\"text-align: center; padding: 8px;\">Qty</th><th style=\"text-align: right; padding: 8px;\">Price</th><th style=\"text-align: right; padding: 8px;\">Total</th></tr></thead><tbody><tr th:each=\"item : ${orderSummary.items}\" style=\"border-bottom: 1px solid #eee;\"><td style=\"text-align: left; padding: 8px;\" th:text=\"${item.productName}\">Product Name</td><td style=\"text-align: center; padding: 8px;\" th:text=\"${item.quantity}\">1</td><td style=\"text-align: right; padding: 8px;\" th:text=\"'$' + ${#numbers.formatDecimal(item.price, 1, 2)}\">$0.00</td><td style=\"text-align: right; padding: 8px;\" th:text=\"'$' + ${#numbers.formatDecimal(item.total, 1, 2)}\">$0.00</td></tr></tbody><tfoot><tr style=\"border-top: 2px solid #ddd; font-weight: bold;\"><td colspan=\"3\" style=\"text-align: right; padding: 8px;\">Total:</td><td style=\"text-align: right; padding: 8px;\" th:text=\"'$' + ${#numbers.formatDecimal(orderSummary.orderTotal, 1, 2)}\">$0.00</td></tr></tfoot></table></div>"
        },
        {
          "name": "shipping",
          "description": "Shipping information section",
          "variables": [
            {
              "name": "shippingAddress",
              "type": "String",
              "description": "Shipping address",
              "required": true
            },
            {
              "name": "shippingMethod",
              "type": "String",
              "description": "Shipping method (Standard, Express, etc.)",
              "required": true
            },
            {
              "name": "estimatedDelivery",
              "type": "String",
              "description": "Estimated delivery date",
              "required": true
            }
          ],
          "content": "<div style=\"background-color: #f0f8ff; padding: 15px; margin-bottom: 20px; border-radius: 4px;\"><h3>Shipping Information</h3><p><strong>Address:</strong> <span th:text=\"${shipping.shippingAddress}\">123 Main St, Anytown, USA</span></p><p><strong>Shipping Method:</strong> <span th:text=\"${shipping.shippingMethod}\">Standard</span></p><p><strong>Estimated Delivery:</strong> <span th:text=\"${shipping.estimatedDelivery}\">January 1, 2023</span></p></div>"
        },
        {
          "name": "tracking",
          "description": "Order tracking section",
          "variables": [
            {
              "name": "trackingUrl",
              "type": "String",
              "description": "URL to track the order",
              "required": true
            }
          ],
          "content": "<div style=\"background-color: #f0fff0; padding: 15px; margin-bottom: 20px; border-radius: 4px;\"><h3>Track Your Order</h3><p>You can track your order status at any time by clicking the link below:</p><div style=\"margin: 15px 0; text-align: center;\"><a th:href=\"${tracking.trackingUrl}\" style=\"background-color: #607d8b; color: white; padding: 8px 16px; text-decoration: none; border-radius: 4px;\">Track Order</a></div></div>"
        }
      ],
      "variables": [
        {
          "name": "customerName",
          "type": "String",
          "description": "Customer's name",
          "required": true
        },
        {
          "name": "orderNumber",
          "type": "String",
          "description": "Order confirmation number",
          "required": true
        }
      ],
      "templateText": "<div style=\"margin-bottom: 20px;\"><h2>Thank You for Your Order, ${customerName}!</h2><p>Your order <strong>#${orderNumber}</strong> has been confirmed and is being processed.</p><p>We'll send you another email once your order has shipped.</p></div>"
    }
  ]
}
